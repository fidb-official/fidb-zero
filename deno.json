{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["esnext", "dom", "deno.ns"],
    "importsNotUsedAsValues": "error",
    "strict": true
  },
  "tasks": {
    "check": "deno run --check src/index.ts",
    "check:watch": "deno run --check --watch src/index.ts",
    "test": "deno test --check --allow-read --allow-write src",
    "test:watch": "deno test --check --allow-read --allow-write --watch src",
    "format": "deno fmt src"
  },
  "fmt": {
    "options": {
      "semiColons": false
    }
  },
  "imports": {
    "asserts": "https://deno.land/std@0.170.0/testing/asserts.ts",
    "uuid": "https://deno.land/std@0.170.0/uuid/mod.ts",
    "path": "https://deno.land/std@0.170.0/path/mod.ts",
    "fs": "https://deno.land/std@0.170.0/fs/mod.ts"
  }
}
